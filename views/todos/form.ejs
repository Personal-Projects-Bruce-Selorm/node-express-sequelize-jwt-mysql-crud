<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-primary"
  data-bs-toggle="modal"
  data-bs-target="#exampleModal"
>
  new todo
</button>

<!-- Modal -->

<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Todo</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group pb-2">
            <label for="description">Description</label>
            <input type="text" class="form-control" name="description" />
            <label for="" class="error description"></label>
          </div>
          <div class="form-group pb-2">
            <label for="deadline">Deadline</label>
            <input type="date" class="form-control" name="deadline" />
            <label for="" class="error deadline"></label>
          </div>
          <div class="form-group pb-2">
            <label for="priority">Priority</label>
            <select name="priority" id="" class="form-control">
              <option value="low" >Low</option>
              <option value="medium">Medium</option>
              <option value="high">High</option>
            </select>
            <label for="" class="error priority"></label>
          </div>
          <div class="form-group pb-2">
            <label for="notes">Notes</label>
            <textarea name="notes" cols="30" rows="5" class="form-control"></textarea>
            <label for="" class="error notes"></label>
          </div>
          <div>
            <button type="submit" class="btn btn-primary" onclick="addTodo()">Save</button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>
